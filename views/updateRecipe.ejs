<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Update or change your recipe!</h1>
  </div>

  <!-- Include input fields for the updated recipe information -->
  
  <div class="col-8">
    <form action="/recipe/<%= recipe._id %>" method="POST">
        <div class="row g-3">

            <div class="col-12">
              <label for="name" class="form-label">Recipe Name</label>
              <input type="text" name="name" id="name" class="form-control" value="<%= recipe.name %>" required>
            </div>
            
            <div class="col-12">
              <label for="description" class="form-label">Description</label>
              <textarea name="description" id="description" class="form-control" cols="30" rows="4" required><%= recipe.description %></textarea>
            </div>
    
            <div class="col-12">
              <label for="ingredients" class="form-label">Ingredients</label>
              <br>
              <small>Forgot any ingredient?</small>
              <div class="ingredientList">
                <% for (const ingredient of recipe.ingredients) { %>
                  <div class="ingredeintDiv mb-1">
                    <input type="text" name="ingredients" class="form-control" value="<%= ingredient %>">
                  </div>
                <% } %>
              </div>
            </div>
      
            <div class="col-12">
              <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Ingredient</button>
            </div>
      
            <div class="col-12">
              <label for="equipment" class="form-label">Equipment</label>
              <br>
              <small>Forgot any tool?</small>
              <div class="equipmentList">
                <% for (const equipment of recipe.equipment) { %>
                  <div class="equipmentDiv mb-1">
                    <input type="text" name="equipment" class="form-control" value="<%= equipment %>">
                  </div>
                <% } %>
              </div>
            </div>
      
            <div class="col-12">
              <button type="button" class="btn btn-outline-primary" id="addEquipmentBtn">+ Equipment</button>
            </div>
    
            <div class="col-12">
              <label for="category">Select Category</label>
              <select class="form-select form-control" name="category" aria-label="Category">
                <option selected>Select Category</option>
                <option value="Only-Meats">Only Meats</option>
                <option value="Mexican-Touch">Mexican Touch</option>
                <option value="Only-Veggies">only Veggies</option>
                <option value="Seafood">Seafood</option>
                <option value="Sweets">Sweet</option>
                <option value="Spanish">Spanish</option>
              </select>
            </div>    

            <div class="col-12">
              <label for="instructions" class="form-label">Instructions</label>
              <br>
              <small>Update the steps for the magic</small>
              <div class="instructionsList">
                <% for (const instructions of recipe.instructions) { %>
                  <div class="instructionsDiv mb-1">
                    <input type="text" name="instructions" class="form-control" value="<%= instructions %>">
                  </div>
                <% } %>
              </div>
            </div>
      
            <div class="col-12">
              <button type="button" class="btn btn-outline-primary" id="addInstructionstBtn">+ Instructions</button>
            </div>

    </div>
  </div>
 <br>
  <!-- Hidden input field to store the recipe ID -->
  <input type="hidden" name="recipeId" value="<%= recipe._id %>">

  <button type="submit" class="btn btn-primary">Update Recipe</button>
</form>
