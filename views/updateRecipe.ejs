<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Update or change your recipe!</h1>
  </div>

  <!-- Include input fields for the updated recipe information -->
  
  <div class="col-8">
    <form action="/recipe/<%= recipe._id %>" method="POST">
        <div class="row g-3">

            <div class="col-12">
              <label for="name" class="form-label">Recipe Name</label>
              <input type="text" name="name" id="name" class="form-control" required>
            </div>
            
            <div class="col-12">
              <label for="description" class="form-label">Description</label>
              <textarea name="description" id="description" class="form-control" cols="30" rows="4" required></textarea>
            </div>
    
            <div class="col-12">
              <label for="name" class="form-label">Ingredients</label><br>
              <small>Go crazy with ingredients!</small>
              <div class="ingredientList">
                <div class="ingredeintDiv mb-1">
                  <input type="text" name="ingredients" class="form-control">
                </div>
              </div>
            </div>
    
            <div class="col-12">
              <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Ingredient</button>
            </div>
  
            <div class="col-12">
              <label for="name" class="form-label">Equipment</label><br>
              <small>Don't forget the needed equipment and tools:</small>
              <div class="equipmentList">
                <div class="equipmentDiv mb-1">
                  <input type="text" name="equipment" class="form-control">
                </div>
              </div>
            </div>
    
            <div class="col-12">
              <button type="button" class="btn btn-outline-primary" id="addEquipmentBtn">+ Equipment</button>
            </div>
    
            <div class="col-12">
              <label for="category">Select Category</label>
              <select class="form-select form-control" name="category" aria-label="Category">
                <option selected>Select Category</option>
                <option value="Only-Meats">Only Meats</option>
                <option value="Mexican-Touch">Mexican Touch</option>
                <option value="Only-Veggies">only Veggies</option>
                <option value="Seafood">Seafood</option>
                <option value="Sweets">Sweet</option>
                <option value="Spanish">Spanish</option>
              </select>
            </div>    
    </div>

  <!-- Hidden input field to store the recipe ID -->
  <input type="hidden" name="recipeId" value="<%= recipe._id %>">

  <button type="submit">Update Recipe</button>
</form>
