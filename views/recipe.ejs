<% if(recipe != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
      </ol>
    </nav>
  
  
    <div class="row">
  <!-- sticky fluid means the picture will be displayed even when we scroll up or down -->
      <div class="col-12 col-md-4">
        <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- recipe.name %>" loading="lazy">
      </div>
  
      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%- recipe.name %></h1></div>
          <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipe.category %></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Description</h4>
            <%- recipe.description %>
          </div>
        </div>
  <!-- iteration over the elements from the data base -->
        <div class="row pt-4">
          <div class="col-12">
            <h4>Ingredients</h4>
            <ul class="list-group list-group-flush">
              <% recipe.ingredients.forEach(function(ingredients, index){ %>
                <li class="list-group-item"><%= ingredients %></li>
              <% }) %> <br>
            <h4>Equipment</h4>
            <ul class="list-group list-group-flush">
              <% recipe.equipment.forEach(function(equipment, index){ %>
                <li class="list-group-item"><%= equipment %></li>
              <% }) %> <br>
            <h4>Instructions</h4>
            <ul class="list-group list-group-flush">
              <% recipe.instructions.forEach(function(instructions, index){ %>
                <li class="list-group-item"><%= instructions %></li>
              <% }) %> <br>
            </ul> 
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <p>No item found.</p>
    <% } %>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/update-recipe/<%= recipe._id %>" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Update your recipe</a>
      <form action="/recipe/<%= recipe._id %>?_method=DELETE" method="POST">
        <button class="btn btn-primary btn-dark btn-lg px-4 me-md-2" type="submit" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete Recipe</button>
      </form>
    </div> 
